<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="500.0" prefWidth="700.0"
      xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.jah.newsys2.RecommendedSubjectsController">
    <children>
        <!-- Maroon header with shadow -->
        <StackPane style="-fx-background-color: #800000; -fx-background-radius: 0 0 15 15;">
            <padding>
                <Insets bottom="20.0" top="20.0" />
            </padding>
            <children>
                <Label text="Recommended Subjects" textFill="WHITE">
                    <font>
                        <Font name="Segoe UI Bold" size="22.0" />
                    </font>
                    <effect>
                        <DropShadow color="#590000" radius="3" spread="0.2" />
                    </effect>
                </Label>
            </children>
        </StackPane>

        <AnchorPane fx:id="rootPane" maxHeight="-1.0" maxWidth="-1.0" prefHeight="469.0" prefWidth="700.0"
                    style="-fx-background-color: #f8f5f2;" VBox.vgrow="ALWAYS">
            <padding>
                <Insets bottom="20.0" left="30.0" right="30.0" top="20.0" />
            </padding>
            <children>
                <!-- Student Info Section -->
                <VBox spacing="15.0" AnchorPane.leftAnchor="40.0" AnchorPane.rightAnchor="40.0" AnchorPane.topAnchor="20.0">
                    <children>
                        <Label style="-fx-text-fill: #800000; -fx-font-family: 'Segoe UI Bold'; -fx-font-size: 18;"
                               text="Student Information" />

                        <Separator style="-fx-background-color: #d0a0a0;" />

                        <HBox alignment="CENTER_LEFT" spacing="20.0">
                            <children>
                                <Label prefWidth="100.0" text="Name:"
                                       style="-fx-text-fill: #4a4a4a; -fx-font-family: 'Segoe UI'; -fx-font-size: 14;" />
                                <Label fx:id="nameLabel" text="Student Name"
                                       style="-fx-text-fill: #4a4a4a; -fx-font-family: 'Segoe UI Semibold'; -fx-font-size: 14;" />
                            </children>
                        </HBox>

                        <HBox alignment="CENTER_LEFT" spacing="20.0">
                            <children>
                                <Label prefWidth="100.0" text="ID Number:"
                                       style="-fx-text-fill: #4a4a4a; -fx-font-family: 'Segoe UI'; -fx-font-size: 14;" />
                                <Label fx:id="idLabel" text="ID Number"
                                       style="-fx-text-fill: #4a4a4a; -fx-font-family: 'Segoe UI Semibold'; -fx-font-size: 14;" />
                            </children>
                        </HBox>

                        <HBox alignment="CENTER_LEFT" spacing="20.0">
                            <children>
                                <Label prefWidth="100.0" text="Program:"
                                       style="-fx-text-fill: #4a4a4a; -fx-font-family: 'Segoe UI'; -fx-font-size: 14;" />
                                <Label fx:id="programLabel" text="Program"
                                       style="-fx-text-fill: #4a4a4a; -fx-font-family: 'Segoe UI Semibold'; -fx-font-size: 14;" />
                            </children>
                        </HBox>
                    </children>
                </VBox>

                <!-- Subjects Table Section -->
                <VBox spacing="15.0" AnchorPane.leftAnchor="40.0" AnchorPane.rightAnchor="40.0" AnchorPane.topAnchor="180.0">
                    <children>
                        <Label style="-fx-text-fill: #800000; -fx-font-family: 'Segoe UI Bold'; -fx-font-size: 18;"
                               text="Recommended Subjects" />

                        <Separator style="-fx-background-color: #d0a0a0;" />

                        <TableView fx:id="subjectsTable" prefHeight="180.0"
                                   style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #e0d7d7; -fx-padding: 5;">
                            <columns>
                                <TableColumn fx:id="codeColumn" prefWidth="400.0" text="Subject Code"
                                             style="-fx-font-family: 'Segoe UI Semibold'; -fx-background-color: #f0e8e8;" />
                                <TableColumn fx:id="unitsColumn" prefWidth="180.0" text="Units"
                                             style="-fx-font-family: 'Segoe UI Semibold'; -fx-background-color: #f0e8e8;" />
                            </columns>
                            <effect>
                                <DropShadow color="#00000015" height="3.0" radius="2.0" width="3.0" />
                            </effect>
                            <placeholder>
                                <Label text="No recommended subjects available"
                                       style="-fx-text-fill: #666666; -fx-font-family: 'Segoe UI';" />
                            </placeholder>
                        </TableView>

                        <HBox alignment="CENTER_RIGHT" spacing="15.0">
                            <children>
                                <Label text="Total Units:"
                                       style="-fx-text-fill: #4a4a4a; -fx-font-family: 'Segoe UI Semibold'; -fx-font-size: 14;" />
                                <Label fx:id="totalUnitsLabel" text="0"
                                       style="-fx-text-fill: #800000; -fx-font-family: 'Segoe UI Bold'; -fx-font-size: 16;" />
                            </children>
                        </HBox>
                    </children>
                </VBox>

                <!-- Action Buttons -->
                <HBox alignment="CENTER_RIGHT" spacing="15.0" AnchorPane.bottomAnchor="30.0" AnchorPane.rightAnchor="40.0">
                    <children>
                        <Button fx:id="printButton" mnemonicParsing="false" onAction="#handlePrint"
                                style="-fx-background-color: #800000; -fx-text-fill: white; -fx-background-radius: 6; -fx-cursor: hand;"
                                text="Print">
                            <font>
                                <Font name="Segoe UI Semibold" size="14.0" />
                            </font>
                            <padding>
                                <Insets bottom="10.0" left="25.0" right="25.0" top="10.0" />
                            </padding>
                            <effect>
                                <DropShadow color="#00000035" height="5.0" radius="3.0" width="5.0" />
                            </effect>
                        </Button>
                        <Button fx:id="closeButton" mnemonicParsing="false" onAction="#handleClose"
                                style="-fx-background-color: #a0a0a0; -fx-text-fill: white; -fx-background-radius: 6; -fx-cursor: hand;"
                                text="Close">
                            <font>
                                <Font name="Segoe UI Semibold" size="14.0" />
                            </font>
                            <padding>
                                <Insets bottom="10.0" left="25.0" right="25.0" top="10.0" />
                            </padding>
                            <effect>
                                <DropShadow color="#00000025" height="4.0" radius="3.0" width="4.0" />
                            </effect>
                        </Button>
                    </children>
                </HBox>
            </children>
        </AnchorPane>
    </children>
</VBox>