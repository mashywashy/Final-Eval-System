<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="500.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.jah.newsys2.AppController">
    <children>
        <!-- Blue header bar with centered title -->
        <StackPane style="-fx-background-color: #3498db;">
            <padding>
                <Insets bottom="15.0" top="15.0" />
            </padding>
            <children>
                <Label text="Student Registration System" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="22.0" />
                    </font>
                </Label>
            </children>
        </StackPane>

        <AnchorPane fx:id="rootPane" maxHeight="-1.0" maxWidth="-1.0" prefHeight="469.0" prefWidth="700.0" style="-fx-background-color: #f5f5f5;" VBox.vgrow="ALWAYS">
            <padding>
                <Insets bottom="20.0" left="30.0" right="30.0" top="20.0" />
            </padding>
            <children>
                <VBox spacing="15.0" AnchorPane.leftAnchor="40.0" AnchorPane.rightAnchor="40.0" AnchorPane.topAnchor="30.0">
                    <children>
                        <!-- Form with all fields in a centered white panel -->
                        <VBox spacing="15.0" style="-fx-background-color: white; -fx-padding: 20px; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 5);">
                            <children>
                                <HBox alignment="CENTER_LEFT" spacing="20.0">
                                    <children>
                                        <Label prefWidth="120.0" text="Name:">
                                            <font>
                                                <Font size="14.0" />
                                            </font>
                                        </Label>
                                        <TextField fx:id="nameField" prefWidth="300.0" promptText="Enter your full name">
                                            <effect>
                                                <DropShadow color="#00000022" height="5.0" radius="2.0" width="5.0" />
                                            </effect>
                                        </TextField>
                                    </children>
                                </HBox>

                                <HBox alignment="CENTER_LEFT" spacing="20.0">
                                    <children>
                                        <Label prefWidth="120.0" text="ID Number:">
                                            <font>
                                                <Font size="14.0" />
                                            </font>
                                        </Label>
                                        <TextField fx:id="idNumberField" prefWidth="300.0" promptText="Enter your ID number">
                                            <effect>
                                                <DropShadow color="#00000022" height="5.0" radius="2.0" width="5.0" />
                                            </effect>
                                        </TextField>
                                    </children>
                                </HBox>

                                <HBox alignment="CENTER_LEFT" spacing="20.0">
                                    <children>
                                        <Label prefWidth="120.0" text="New Student:">
                                            <font>
                                                <Font size="14.0" />
                                            </font>
                                        </Label>
                                        <ComboBox fx:id="newStudentComboBox" prefWidth="300.0" promptText="Select">
                                            <effect>
                                                <DropShadow color="#00000022" height="5.0" radius="2.0" width="5.0" />
                                            </effect>
                                        </ComboBox>
                                    </children>
                                </HBox>

                                <HBox alignment="CENTER_LEFT" spacing="20.0">
                                    <children>
                                        <Label prefWidth="120.0" text="Year Level:">
                                            <font>
                                                <Font size="14.0" />
                                            </font>
                                        </Label>
                                        <ComboBox fx:id="yearLevelComboBox" disable="true" prefWidth="300.0" promptText="Select year">
                                            <effect>
                                                <DropShadow color="#00000022" height="5.0" radius="2.0" width="5.0" />
                                            </effect>
                                        </ComboBox>
                                    </children>
                                </HBox>

                                <HBox alignment="CENTER_LEFT" spacing="20.0">
                                    <children>
                                        <Label prefWidth="120.0" text="Semester:">
                                            <font>
                                                <Font size="14.0" />
                                            </font>
                                        </Label>
                                        <ComboBox fx:id="semesterComboBox" disable="true" prefWidth="300.0" promptText="Select semester">
                                            <effect>
                                                <DropShadow color="#00000022" height="5.0" radius="2.0" width="5.0" />
                                            </effect>
                                        </ComboBox>
                                    </children>
                                </HBox>

                                <HBox alignment="CENTER_LEFT" spacing="20.0">
                                    <children>
                                        <Label prefWidth="120.0" text="Recent Subjects:">
                                            <font>
                                                <Font size="14.0" />
                                            </font>
                                        </Label>
                                        <TextField fx:id="subjectsField" disable="true" prefWidth="300.0" promptText="Number of subjects">
                                            <effect>
                                                <DropShadow color="#00000022" height="5.0" radius="2.0" width="5.0" />
                                            </effect>
                                        </TextField>
                                    </children>
                                </HBox>

                                <HBox alignment="CENTER_LEFT" spacing="20.0">
                                    <children>
                                        <Label prefWidth="120.0" text="Program:">
                                            <font>
                                                <Font size="14.0" />
                                            </font>
                                        </Label>
                                        <ComboBox fx:id="programComboBox" prefWidth="300.0" promptText="Select your program">
                                            <effect>
                                                <DropShadow color="#00000022" height="5.0" radius="2.0" width="5.0" />
                                            </effect>
                                        </ComboBox>
                                    </children>
                                </HBox>
                            </children>
                        </VBox>
                    </children>
                </VBox>

                <HBox alignment="CENTER_RIGHT" spacing="15.0" AnchorPane.bottomAnchor="30.0" AnchorPane.rightAnchor="40.0">
                    <children>
                        <Button fx:id="cancelButton" mnemonicParsing="false" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" text="Cancel">
                            <font>
                                <Font size="14.0" />
                            </font>
                            <padding>
                                <Insets bottom="8.0" left="20.0" right="20.0" top="8.0" />
                            </padding>
                        </Button>
                        <Button fx:id="nextButton" mnemonicParsing="false" style="-fx-background-color: #2ecc71; -fx-text-fill: white;" text="Next">
                            <font>
                                <Font size="14.0" />
                            </font>
                            <padding>
                                <Insets bottom="8.0" left="25.0" right="25.0" top="8.0" />
                            </padding>
                            <effect>
                                <DropShadow color="#00000033" height="5.0" radius="2.0" width="5.0" />
                            </effect>
                        </Button>
                    </children>
                </HBox>
            </children>
        </AnchorPane>
    </children>
</VBox>